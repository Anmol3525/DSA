#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d", &n);

    int *arr = (int*)malloc(n * sizeof(int));
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    long long prefix_sum = 0;
    long long count = 0;

    long long *prefix = (long long*)calloc(2*n+1, sizeof(long long));
    long long offset = n;

    prefix[offset] = 1;

    for(int i = 0; i < n; i++) {
        prefix_sum += arr[i];
        long long index = prefix_sum + offset;
        if(index >= 0 && index < 2*n+1) {
            count += prefix[index];
            prefix[index]++;
        }
    }

    printf("%lld\n", count);

    free(arr);
    free(prefix);

    return 0;
}
